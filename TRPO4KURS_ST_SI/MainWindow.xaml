<Window
    x:Class="TRPO4KURS_ST_SI.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:TRPO4KURS_ST_SI"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="800"
    Height="500"
    MinWidth="800"
    MinHeight="500"
    Background="#FFB5D5CA"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Frame
            x:Name="MainFrame"
            Grid.Row="1"
            Foreground="Black"
            Navigated="MainFrame_Navigated"
            NavigationUIVisibility="Hidden"
            Source="Pages/Pr1.xaml" />

        <StackPanel Orientation="Horizontal">
            <Button
                x:Name="ButBack"
                Width="70"
                Height="25"
                Margin="10,0,0,0"
                HorizontalAlignment="Left"
                Background="#FFFFFCD6"
                Click="ButBack_Click"
                Content="Назад"
                FontFamily="Impact" />
            <Button
                x:Name="ButCal"
                Width="75"
                Height="25"
                Margin="10,0,0,0"
                HorizontalAlignment="Left"
                Background="#FFFFFCD6"
                Click="ButCal_Click"
                Content="Калькулятор"
                FontFamily="Impact" />
            <Button
                x:Name="ButEx"
                Width="75"
                Height="25"
                Margin="10,0,0,0"
                HorizontalAlignment="Left"
                Background="#FFFFFCD6"
                Click="ButEx_Click"
                Content="Экспорт"
                FontFamily="Impact" />
            <Button
                x:Name="ButIm"
                Width="75"
                Height="25"
                Margin="10,0,0,0"
                HorizontalAlignment="Left"
                Background="#FFFFFCD6"
                Click="ButIm_Click"
                Content="Импорт"
                FontFamily="Impact" />
        </StackPanel>


    </Grid>
</Window>
